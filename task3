using System;
using System.IO;
using System.Text;

namespace lesson5task3
{
    class MainClass
    {
        public static void Main(string[] args)
        {
            BinaryWriter bWriter = new BinaryWriter(new FileStream("C:\\datanewstream1.dat", FileMode.OpenOrCreate));
            Console.WriteLine("Введите числа от 0 до 255 через пробел");
            string a = Console.ReadLine();
            string[] b = a.Split(new char[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);
            byte[] s = new byte [b.Length];
            {
                for (int i = 0; i < s.Length; i++)
                {
                    if (s[i] >= 0 && s[i] <= 255);
                    bWriter.Write(s[i]);
                }
                bWriter.Close();
            }
        }
    }
}